<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/tab1"
        style="@style/bottom_bar_linear">

        <ImageView
            android:id="@+id/iv1"
            style="@style/bottom_bar_image"
            android:src="@drawable/message_selected"/>

        <TextView
            android:id="@+id/text1"
            style="@style/bottom_bar_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab2"
        style="@style/bottom_bar_linear">

        <ImageView
            android:id="@+id/iv2"
            style="@style/bottom_bar_image"
            android:src="@drawable/contacts_unselected"/>

        <TextView
            android:id="@+id/text2"
            style="@style/bottom_bar_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab3"
        style="@style/bottom_bar_linear">

        <ImageView
            android:id="@+id/iv3"
            style="@style/bottom_bar_image"
            android:src="@drawable/news_unselected"/>

        <TextView
            android:id="@+id/text3"
            style="@style/bottom_bar_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab4"
        style="@style/bottom_bar_linear">

        <ImageView
            android:id="@+id/iv4"
            style="@style/bottom_bar_image"
            android:src="@drawable/setting_unselected"/>

        <TextView
            android:id="@+id/text4"
            style="@style/bottom_bar_text" />

    </LinearLayout>

</LinearLayout>